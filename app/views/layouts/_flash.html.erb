<div class="col">
  <% if notice %>
      <div class="alert alert-info" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <i class="fa fa-times"></i>
        </button>
        <p><%= notice %></p>
      </div>
  <% end %>
  <% if alert %>
      <p class="alert alert-warning" role="alert"><%= alert %></p>
  <% end %>
</div>