<%= form_with model: @facade.list, html: { class: "form-inline mb-4" } do |f| %>
    <div class="input-group">
      <%= f.text_field :name, class: "form-control lister-list-create", placeholder: "Create a list" %>
      <span class="input-group-btn">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </span>
    </div>
<% end %>